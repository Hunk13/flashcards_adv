<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th><%= t("blocks_index_name") %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <tr class="table table-hover table-condensed">
      <td><%= block.title %></td>

      <% if block.current? %>
        <td>
          <%= link_to t("blocks_index_make_usual"), reset_as_current_block_path(block),
                      method: :put %>
        </td>
      <% else %>
        <td>
          <%= link_to t("blocks_index_make_current"), set_as_current_block_path(block),
                      method: :put %>
        </td>
      <% end %>
      <td><%= link_to t("blocks_index_edit"), edit_block_path(block) %></td>
      <td><%= link_to t("blocks_index_delete"), block, method: :delete,
                      data: { confirm: "Удалить колоду?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
